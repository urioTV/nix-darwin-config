// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // --- UI & THEME ---
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  },
  "icon_theme": "Material Icon Theme",
  "ui_font_family": "SFProText Nerd Font",
  "ui_font_size": 12,
  "buffer_font_family": "SFMono Nerd Font",
  "buffer_font_size": 12,

  // --- AI AGENTS & CONTEXT SERVERS ---
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "openrouter",
      "model": "qwen/qwen3-coder"
    },
    "inline_assistant_model": {
      "provider": "openrouter",
      "model": "qwen/qwen3-coder"
    },
    "commit_message_model": {
      "provider": "openrouter",
      "model": "qwen/qwen3-coder"
    },
    "model_parameters": []
  },
  "context_servers": {
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {}
    }
  },

  // --- LANGUAGE & LSP ---
  "languages": {
    "Nix": {
      "language_servers": ["nixd", "!nil"]
    }
  },
  "lsp": {
    "nixd": {
      "settings": {
        "nixpkgs": {
          "expr": "(builtins.getFlake \"github:urioTV/nix-darwin-config\").darwinConfigurations.darwinPackages"
        },
        "formatting": {
          "command": ["nixfmt"]
        },
        "options": {
          "nixos": {
            "expr": "(builtins.getFlake \"github:urioTV/nix-darwin-config\").darwinConfigurations.MacBook-Air-Urio.options"
          },
          "home_manager": {
            "expr": "(builtins.getFlake \"github:urioTV/nix-darwin-config\").darwinConfigurations.MacBook-Air-Urio.config.home-manager.users.urio"
          }
        }
      }
    }
  },

  // --- TERMINAL ---
  "terminal": {
    "shell": {
      "program": "zsh"
    }
  },

  // --- OTHER FEATURES ---
  "features": {
    "edit_prediction_provider": "zed"
  }
}
